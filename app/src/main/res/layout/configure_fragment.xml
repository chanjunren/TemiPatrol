<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ConfigureFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp"
            android:elevation="100dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_icon"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/maskDetectionMsgLabelTv"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.040"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"
            app:cardCornerRadius="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BDB9A8"
                >

                <ImageView
                    android:id="@+id/maskIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_mask_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.04"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:text="Mask Detection Message"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/maskIcon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/humanDistanceMsgLabelTv"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.040"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="404dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E3B3D8"
                >
                <ImageView
                    android:id="@+id/crowdIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_crowd_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.07"/>

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:padding="20dp"
                    android:text="Human Distance Message"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/crowdIcon"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/serverIpLabelTv"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.040"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="548dp"
            app:cardCornerRadius="30dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9DE3E2"
                >
                <ImageView
                    android:id="@+id/serverIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_server_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:padding="20dp"
                    android:text="@string/ip_server_label"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.149"
                    app:layout_constraintStart_toEndOf="@+id/serverIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/adminPwLabelTv"
            android:layout_marginTop="682dp"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.040"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="30dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6F9696">
                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_password_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:padding="20dp"
                    android:text="Admin Password"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/passwordIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/maskDetectionContainer"
            android:layout_marginTop="280dp"
            android:layout_width="380dp"
            android:layout_height="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toEndOf="@id/maskDetectionMsgLabelTv"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/maskDetectionMsgTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textStyle="bold"
                />
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/humanDistanceMsgContainer"
            android:layout_width="380dp"
            android:layout_height="44dp"
            android:layout_marginTop="424dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toEndOf="@+id/humanDistanceMsgLabelTv"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/humanDistanceMsgTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Text"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textStyle="bold"
                />
        </HorizontalScrollView>


        <ScrollView
            android:id="@+id/serverIpContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/serverIpLabelTv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="568dp"
            android:layout_width="380dp"
            android:layout_height="44dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/serverIpTv"
                android:text="Text"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textStyle="bold"
                />
        </ScrollView>

        <ScrollView
            android:id="@+id/adminPwContainer"
            android:layout_width="380dp"
            android:layout_height="44dp"
            android:layout_marginTop="702dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/adminPwLabelTv"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/adminPwTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Text"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textStyle="bold"
                />
        </ScrollView>

        <ImageView
            android:id="@+id/updateMaskMsgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="267dp"
            android:src="@drawable/ic_edit_icon"
            android:padding="16dp"
            android:background="@drawable/button_background"
            app:layout_constraintStart_toEndOf="@+id/maskDetectionContainer"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/playMaskMsgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="267dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_play_icon"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@+id/updateMaskMsgBtn"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/updateClusterMsgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_edit_icon"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@+id/humanDistanceMsgContainer"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/playClusterMsgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_play_icon"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@id/updateClusterMsgBtn"
            app:layout_constraintTop_toTopOf="parent" />
<!--        address -->
        <ImageView
            android:id="@+id/updateServerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="555dp"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_edit_icon"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@id/serverIpContainer"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/testConnectionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="555dp"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_connect_icon"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@+id/updateServerBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/updatePwBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="689dp"
            android:background="@drawable/button_background"
            android:src="@drawable/ic_edit_icon"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@id/adminPwContainer"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="1080dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/slider_color"
                android:padding="15dp">
                <TextView
                    android:id="@+id/exitPt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="&lt;"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/exitPt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="30sp"
                    android:text="Back"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/exitPt1"
                    android:fontFamily="@font/roboto_condensed_regular"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>